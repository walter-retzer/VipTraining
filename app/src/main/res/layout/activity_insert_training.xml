<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".inserttraining.InsertTrainingActivity">

    <TextView
        android:id="@+id/text_insert_training"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="25dp"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        android:text="@string/adicionar_treino"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon_date"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        app:contentPadding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_insert_training"
        app:srcCompat="@drawable/icon_calendar" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_workout"
        android:layout_width="315dp"
        android:layout_height="132dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_date"
        app:srcCompat="@drawable/img_workout" />

    <TextView
        android:id="@+id/text_date_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        android:text="@string/date"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/icon_date"
        app:layout_constraintTop_toTopOf="@+id/icon_date"
        app:layout_constraintBottom_toBottomOf="@+id/icon_date"/>

    <TextView
        android:id="@+id/text_details_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        android:text="@string/detalhe_do_treinamento"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_workout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/account_name"
        android:theme="@style/AppTheme"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/background_input_text"
        android:hint="@string/nome"
        android:imeOptions="actionNext"
        android:padding="5dp"
        android:textColorHint="@color/grey_dark"
        app:boxStrokeColor="@android:color/transparent"
        app:endIconMode="clear_text"
        app:endIconTint="@color/grey_dark"
        app:hintTextColor="@color/grey_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_details_training"
        app:startIconDrawable="@drawable/icon_account"
        app:startIconTint="@color/grey_dark">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/input_name_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"
            android:layout_weight="1"
            android:text="Auto complete"
            android:textColor="@color/grey_dark" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/account_email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/background_input_text"
        android:hint="@string/email"
        android:imeOptions="actionNext"
        android:padding="5dp"
        android:textColorHint="@color/grey_dark"
        android:theme="@style/AppTheme"
        app:boxStrokeColor="@android:color/transparent"
        app:endIconMode="clear_text"
        app:endIconTint="@color/grey_dark"
        app:hintTextColor="@color/grey_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_name"
        app:startIconDrawable="@drawable/icon_email"
        app:startIconTint="@color/grey_dark">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_email_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:textColor="@color/grey_dark" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/account_password"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/background_input_text"
        android:hint="@string/senha"
        android:imeOptions="actionNext"
        android:padding="5dp"
        android:textColorHint="@color/grey_dark"
        android:theme="@style/AppTheme"
        app:boxStrokeColor="@android:color/transparent"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/grey_dark"
        app:hintTextColor="@color/grey_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_email"
        app:startIconDrawable="@drawable/icon_lock"
        app:startIconTint="@color/grey_dark">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_password_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textColor="@color/grey_dark" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/account_confirm_password"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/background_input_text"
        android:hint="@string/confirme_a_senha"
        android:imeOptions="actionNext"
        android:padding="5dp"
        android:textColorHint="@color/grey_dark"
        android:theme="@style/AppTheme"
        app:boxStrokeColor="@android:color/transparent"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/grey_dark"
        app:hintTextColor="@color/grey_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_password"
        app:startIconDrawable="@drawable/icon_lock"
        app:startIconTint="@color/grey_dark">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:textColor="@color/grey_dark" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create_account"
        style="@style/Button_Style"
        android:layout_marginBottom="30dp"
        android:text="@string/salvar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
