<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".inserttraining.TrainingType1Fragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_workout"
        android:layout_width="320dp"
        android:layout_height="140dp"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_workout" />

    <TextView
        android:id="@+id/text_details_training"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        android:text="@string/emagrecer"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="@+id/img_workout"
        app:layout_constraintEnd_toEndOf="@+id/img_workout"
        app:layout_constraintTop_toBottomOf="@+id/img_workout" />

    <TextView
        android:id="@+id/title_details_training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:elevation="2dp"
        android:text="@string/detalhe_do_treinamento"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_details_training" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_exercise1"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toStartOf="@+id/img_exercise2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_details_training"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
        app:srcCompat="@drawable/img_exercise" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_exercise2"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_exercise1"
        app:layout_constraintTop_toBottomOf="@+id/title_details_training"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
        app:srcCompat="@drawable/img_exercise" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_exercise3"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        app:layout_constraintStart_toEndOf="@+id/img_exercise4"
        app:layout_constraintStart_toStartOf="@+id/img_exercise1"
        app:layout_constraintTop_toBottomOf="@+id/img_exercise1"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
        app:srcCompat="@drawable/img_exercise" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_exercise4"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_exercise3"
        app:layout_constraintTop_toBottomOf="@+id/img_exercise1"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
        app:srcCompat="@drawable/img_exercise" />

</androidx.constraintlayout.widget.ConstraintLayout>
